{
  "name": "blade",
  "displayName": "BLADE",
  "description": "Extended Blade support in Visual Studio Code",
  "version": "0.0.1",
  "homepage": "https://github.com/wangdh15/vscode-blade#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/wangdh15/vscode-blade"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "keywords": [
    "build",
    "c++",
    "vscode",
    "blade",
    "tools"
  ],
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "publisher": "dhwang",
  "activationEvents": [
    "workspaceContains:BLADE_ROOT"
  ],
  "icon": "assets/logo.png",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blade.configProject",
        "title": "Config Project",
        "category": "BLADE"
      },
      {
        "command": "blade.selectTarget",
        "title": "Select Target",
        "category": "BLADE"
      },
      {
        "command": "blade.buildTarget",
        "title": "Build Target",
        "category": "BLADE"
      },
      {
        "command": "blade.runTarget",
        "title": "Run Target",
        "category": "BLADE"
      },
      {
        "command": "blade.clean",
        "title": "Clean",
        "category": "BLADE"
      },
      {
        "command": "blade.runAllTest",
        "title": "RunAllTest",
        "category": "BLADE"
      },
      {
        "command": "blade.dumpComDB",
        "title": "DumpCompDB",
        "category": "BLADE"
      }
    ],
    "configuration": [
      {
        "title": "BLADE",
        "properties": {
          "BLADE.CPUNumber": {
            "type": "number",
            "default": 12,
            "description": "how many cpus to build"
          },
          "BLADE.DumpCompileDB": {
            "type": "boolean",
            "default": true,
            "description": "whether generate compile_commands.json when analysis project"
          },
          "BLADE.CommandPrefix": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string"
            },
            "description": "Command prefix"
          },
          "BLADE.CommandsWhenStartNewTerminal": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string"
            },
            "description": "these command will be run automatically when new terminal is activated"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}